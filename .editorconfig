root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = crlf
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
